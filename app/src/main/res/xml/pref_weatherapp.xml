<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="show_pressure"
        android:title="Pressure"
        app:summaryOff="Hided"
        app:summaryOn="Shown" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="show_temp"
        android:title="Temp"
        app:summaryOff="Hided"
        app:summaryOn="Shown" />

    <ListPreference
        android:defaultValue="red"
        android:entries="@array/preference_color_option_labels"
        android:entryValues="@array/pref_color_option_values"
        android:key="pref_color_key"
        android:title="Color label" />
</PreferenceScreen>